@model Stock.Models.Produccion

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Produccion</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fecha)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fecha)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrdenProduccion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrdenProduccion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Equipo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Equipo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cantidad)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cantidad)
        </dd>
    </dl>
</div>

<div>
    <h3>Productos terminados</h3>
</div>

<div>
     @foreach(var item in Model.EquiposFinalizados)
    {
        <dt class = "col-sm-2">
            @item.Fecha;
        </dt>
        <dt class = "col-sm-2">
            @item.Desde;
        </dt>
        <dt class = "col-sm-2">
            @item.Hasta;
        </dt>
        <dt class = "col-sm-2">
            @item.Cantidad;
        </dt>
        <dt class = "col-sm-2">
            @item.Restante;
        </dt>
        
    }
    
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
