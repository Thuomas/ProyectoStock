@model Stock.Models.Produccion

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Produccion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrdenProduccion" class="control-label"></label>
                <input asp-for="OrdenProduccion" class="form-control" />
                <span asp-validation-for="OrdenProduccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Equipo" class="control-label"></label>
                @* <select asp-for="Equipo" class="form-control">
                <option value="0">Eu13</option>
                <option value="1">Ecg12</option>
                <option value="2">MMC10L</option>
                </select> *@
                <select class="form-control" id="Equipo" name="Equipo">
                    @foreach (var equipo in Enum.GetValues(typeof(Stock.Utils.Equipos)))
                    {
                        <option value="@equipo">@equipo.ToString()</option>
                    }
                </select>
                <span asp-validation-for="Equipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
